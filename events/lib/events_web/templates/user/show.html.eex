<h1>Show User</h1>
<ul class="text-center">

  <l>
    <style >
      img {
        width: 150px;
        height: 150px;
        border: 10px solid #021a40;
      }
    </style>
    <img src="<%= Routes.user_path(@conn, :photo, @user) %>" alt="" >
  </l>
  <h2>
    <strong>Name:</strong>
    <%= @user.name %>
  </h2>

  <h3>
    <strong>Email:</strong>
    <%= @user.email %>
  </h3>
  

  
  <span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user) %></span>
</ul>



